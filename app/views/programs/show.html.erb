
 <main id="main">
    <section class="breadcrumbs">
      <div class="container">

        <ol>
          <li><a href="index.html">Home</a></li>
          <li><a href="program.html">Programs</a></li>
		  <li><%= @programs.program_name %></li>
        </ol>
        <h2><%= @programs.program_name %></h2>

      </div>
    </section>

  <section id="about" class="about section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h3><%= @programs.program_name %></h3>
          <p><%= @programs.overview %></p>
        </div>

        <div class="row">
          <div class="col-lg-6" data-aos="fade-right" data-aos-delay="100">
            <%= image_tag @programs.photo, class: "img-fluid" %>
          </div>
          <div class="col-lg-6 pt-4 pt-lg-0 content d-flex flex-column justify-content-center" data-aos="fade-up" data-aos-delay="100">
            <h3><%= @programs.modality %> <%= @programs.study_level %></h3>
            <p>
              <%= @programs.program_description.html_safe %>
            </p>
          </div>
        </div>

      </div>
	
	<!-- ======= Marketing Headline ======= -->
	<section id="cta" class="cta">
      <div class="container aos-init aos-animate " data-aos="zoom-in">
            <% @marketing.where(page_to_display: 'programs').each do |m|%>
				<div class="text-center">
					<h3><%= m.headline_title%></h3>
					<p><%= m.description%></p>
					<a class="cta-btn" href="<%= m.action%>">Learn more</a>
				</div>
			<% end %>
      </div>
    </section> <!-- End Marketing -->
	