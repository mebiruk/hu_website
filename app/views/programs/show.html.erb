
  <main id="main"   style="margin-top:180px;">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs mt-5" data-aos="fade-in">
      <div class="container mt-5">
           <%= @programs.program_name.html_safe %>
      </div>
    </div><!-- End Breadcrumbs -->

    <!-- ======= Cource Details Section ======= -->
    <section id="course-details" class="course-details">
      <div class="container" data-aos="fade-up">

        <div class="row">
          <div class="col-lg-8">
          <%= image_tag @programs.photo, class: "img-fluid" %>
            <h3><%= @programs.program_name %></h3>
            <%= @programs.program_description.html_safe %>
          </div>
          <div class="col-lg-4">
            <div>
              <div class="course-info d-flex justify-content-between align-items-center">
                <h5>Study Level</h5>
                <%= @programs.study_level %>
              </div>
              <div class="course-info d-flex justify-content-between align-items-center">
                <h5>Program Duration</h5>
                <%= @programs.program_duration %>
          
              </div>

              <div class="course-info d-flex justify-content-between align-items-center">
                <h5>modality</h5>
                <%= @programs.modality %>
              </div>

              <div class="course-info d-flex justify-content-between align-items-center">
                <h5>Total tuition</h5>
                <%= @programs.total_tuition %>
              </div>

              <div class="course-info d-flex justify-content-between align-items-center">
                <h5>Monthly tuition</h5>
                <%= @programs.total_tuition %>
              </div>

              <div class="course-info d-flex justify-content-between align-items-center">
                <h5>Credit hour</h5>
                <%= @programs.credit_hour %> 
              </div>

            </div>
            <div class="mt-5">
                <div class="course-info d-flex justify-content-between align-items-center">
                  <h3>Career Opportunities</h3>
                </div>
                <% @careerOpportunity.where(program_id: @programs.id).each do |career| %>
                  <div class="course-info d-flex justify-content-between align-items-center">
                    <%= career.title.html_safe %>
                  </div>
                <% end %>
              
            </div>
          </div>
        </div>

      </div>
    </section><!-- End Cource Details Section -->


      </div>
    </section><!-- End Cource Details Tabs Section -->

  </main>
