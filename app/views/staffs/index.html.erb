  <main id="main">

    <section id="blog" class="blog">
    <section id="recent-blog-posts" class="recent-blog-posts mt-3"> 
      <div class="container" data-aos="fade-up">
          <div class="entries">
              <div class="row">
                <% @staffs.each do |staff|%>
                  <div class="col-lg-4">
                    <div class="post-box">
                      <div class="post-img mb-4"><%= image_tag staff.photo %></div>
                      <h4 class="post-title"><strong><%= staff.fullname %></strong></h4>
                      <p class="text-secondary"><b><%= staff.office_name %></b></p>
                      <p style="text-align: justify;" class="text-secondary"><%= staff.message.truncate(256).html_safe%></p>
                      <%=link_to staff_path(staff), class:"readmore stretched-link mt-auto" do%>
                        <span>Read More</span><i class="bi bi-arrow-right"></i>
                      <%end%>
                    </div>
                  </div>
                <% end %>
              </div>
            <div class="d-flex justify-content-center"><span><%= paginate @staffs %></span></div>
          </div>
        </div>
    </section>
    </section>
    </main>


