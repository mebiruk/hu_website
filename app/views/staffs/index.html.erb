  <main id="main">

    <section id="blog" class="blog">
    <section id="recent-blog-posts" class="recent-blog-posts mt-3"> 
      <div class="container" data-aos="fade-up">
          <div class="entries">
            <%= paginate @staffs %>
              <div class="row">
                <% @staffs.each do |staff|%>
                  <div class="col-lg-4">
                    <div class="post-box">
                      <div class="post-img"><%= image_tag staff.photo %></div>
                      <h4 class="post-title"><%= staff.fullname %></h4>
                      <h6 class="text-dark"><b><%= staff.office_name %></b></h6>
                      <p style="text-align: justify;" class="text-secondary"><%=truncate(staff.message, :length=>256)%></p>
                      <%=link_to staff_path(staff), class:"readmore stretched-link mt-auto" do%>
                        <span>Read More</span><i class="bi bi-arrow-right"></i>
                      <%end%>
                    </div>
                  </div>
                <% end %>
              </div>
            <%= paginate @staffs %>
          </div>
        </div>
    </section>
    </section>
    </main>


