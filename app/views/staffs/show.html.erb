<main id="main">
  <!-- teacher details -->
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="col-md-5 mb-5">
          <%= image_tag @staff.photo %>
        </div>
        <div class="col-md-6 mb-5">
          <h3><%=@staff.fullname.html_safe%></h3>
          <h6 class="text-color"><%=@staff.job_title.html_safe%></h6>
          <p class="mb-5"><%=@staff.major_responsibilities.html_safe%></p>
          <div class="row">
            <div class="col-md-6 mb-5 mb-md-0">
              <h4 class="mb-4">CONTACT INFO:</h4>
              <ul class="list-unstyled">
                <li class="mb-3"><a class="text-color" href="mailto:<%=@staff.email.html_safe%>"><i class="ti-email mr-2"></i><%=@staff.email.html_safe%></a></li>
                <li class="mb-3"><a class="text-color" href="callto:<%=@staff.office_phone_number.html_safe%>"><i class="ti-mobile mr-2"></i><%=@staff.office_phone_number.html_safe%></a></li>
                <li class="mb-3"><a class="text-color" href="#"><i class="ti-world mr-2"></i><%=@staff.office_name.html_safe%>/a></li>
                  <li class="mb-3"><a class="text-color" href="#"><i class="ti-location-pin mr-2"></i><%=@staff.office_address.html_safe%>
                    </div>
                  </div>
                </div>
                <div class="col-12">
                  <h4 class="mb-4">Message</h4>
                  <p class="mb-5"><%=@staff.message.html_safe%></p>
                </div>
              </div>
              <!-- /teacher details -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="section">
    <div class="container">
            <div class="col-12">
          <h2 class="section-title">Other Staff Members</h2>
        </div>
      <div class="row justify-content-center">
        <!-- staffs -->
        <%=@staffs.each do |staff|%>
          <div class="col-lg-4 col-sm-6 mb-5 mb-lg-0">
            <div class="card border-0 rounded-0 hover-shadow">
              <%= image_tag staff.photo, class:"card-img-top rounded-0" %>
              <div class="card-body">
                <%= link_to staff_path(staff) do %>
                  <h4 class="card-title"><%=staff.fullname%></h4>
                <%end%>
                <div class="d-flex justify-content-between">
                  <span><%=staff.job_title%></span>
                </div>
              </div>
            </div>
          </div>
        <%end%>
        <!-- staffs -->
      </div>
      <%= paginate @staffs %>
    </div>
  </section>
</main>
