    <section id="blog" class="blog-mf sect-pt4 route mt-5">
      <div class="container">
        <div class="row">
          <div class="col-sm-12 mt-5">
            <div class="section-title">
              <h2>
                Latest News
              </h2>
            </div>
          </div>
        </div>
        <div class="row">
        <% @news.each do |n|%>
          <div class="col-md-4 d-flex align-items-stretch">
            <div class="card card-blog">
              <div class="card-img">
                <a href=""><%= image_tag n.photo, class: "img-fluid" %></a>
              </div>
              <div class="card-body d-flex flex-column">
                <h6><span class="badge badge-secondary float-left mb-1"><%= n.created_at %></span></h6>
                <h3 class="card-title"><a href=""><%= n.news_title %></a></h3>
                <p class="card-description">
                  <%= n.overview %>
                </p>
                <%= link_to "Read More", news_path(n.id), class: "readmore stretched-link mt-auto"%>
              </div>
            </div>
          </div>
        <% end %>  
        </div>
      </div>
    </section>